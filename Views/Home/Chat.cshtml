@model List<Message>

@{
    ViewData["Title"] = "Chat";
}

<input type="hidden" id="thisUNAME" value="@ViewBag.UserName" />
<input type="hidden" id="thisUID" value="@ViewBag.UserId" />

<div class="container">
    <ul id="UserList" class="list-group">
    </ul>
</div>

@if (Model.Any())
{
    <div class="container">
        <div id="messagesList" style="font-size: 18px;">

            <h5 class="text-center text-secondary"> [ @Model[0].Date.Day/ @Model[0].Date.Month/ @Model[0].Date.Year ]</h5>

            @for (int i = 0; i < Model.Count; i++)
            {
                if (i - 1 >= 0 && Model[i - 1].Date.Date < Model[i].Date.Date)
                {
                    <h5 class="text-center text-secondary"> [ @Model[i].Date.Day/ @Model[i].Date.Month/ @Model[i].Date.Year ]</h5>
                }

                @if (Model[i].Text.StartsWith('%'))
                {
                    <div class="whisper"><i>(W)@Model[i].Date.Hour:@Model[i].Date.Minute:@Model[i].Date.Second</i> <strong id="m_uid">[@Model[i].User]</strong>: <span id="encryped_message">@Model[i].Text.TrimStart('%')</span></div>
                }
                else
                {
                    <div><i>@Model[i].Date.Hour:@Model[i].Date.Minute:@Model[i].Date.Second</i> <strong id="m_uid">[@Model[i].User]</strong>: <span id="encryped_message">@Model[i].Text</span></div>
                }
            }
        </div>
        <hr style="height: 5px;" class="bg-dark" />
        <div class="fixed-bottom position-sticky bg-white">
            <div id="message-holder" class="mt-3 d-flex justify-content-start">
                <input class="w-75 ml-4 pl-3" type="text" id="messageInput" placeholder="Message..." />
                <button id="sendButton" class="ml-4 btn btn-primary btn-lg">Send</button>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div id="messagesList" style="font-size: 18px;">
        </div>
        <hr style="height: 5px;" class="bg-dark" />
        <div class="fixed-bottom position-sticky bg-white">
            <div id="message-holder" class="mt-3 d-flex justify-content-start">
                <input class="w-75 ml-4 pl-3" type="text" id="messageInput" placeholder="Message..." />
                <button id="sendButton" class="ml-4 btn btn-primary btn-lg">Send</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="/js/crypto/jsencrypt.min.js"></script>
    <script src="/js/chat.js"></script>
}
